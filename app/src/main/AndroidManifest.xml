<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biz.netdevelopers.aukceadrazbyfragments" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="biz.netdevelopers.aukceadrazbyfragments.AuctionListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="biz.netdevelopers.aukceadrazbyfragments.AuctionDetailActivity"
            android:label="@string/title_auction_detail"
            android:parentActivityName="biz.netdevelopers.aukceadrazbyfragments.AuctionListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AuctionListActivity" />
        </activity>

        <activity
            android:name="biz.netdevelopers.aukceadrazbyfragments.Filtry"
            android:label="Nastavení filtrů"
            android:theme="@style/AppThemeDialog"
            android:parentActivityName="biz.netdevelopers.aukceadrazbyfragments.AuctionListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AuctionListActivity" />
        </activity>

        <activity
            android:name="biz.netdevelopers.aukceadrazbyfragments.Nastaveni"
            android:label="Nastavení aplikace"
            android:theme="@style/AppThemeDialog"
            android:parentActivityName="biz.netdevelopers.aukceadrazbyfragments.AuctionListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AuctionListActivity" />
        </activity>

    </application>

</manifest>
