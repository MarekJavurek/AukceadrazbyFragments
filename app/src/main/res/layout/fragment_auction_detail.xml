<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".AuctionDetailFragment"
android:layout_width="match_parent"
android:padding="10dp"
android:layout_height="match_parent"
android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linear_detail_layout"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Název aukce"
                android:layout_gravity="center"
                android:textColor="#088da5"
                android:paddingTop="20dp"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vyvolávací cena"
                android:textColor="#088da5"
                android:paddingTop="20dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datum:"
                        android:layout_gravity="center"
                        android:textColor="#088da5"
                        android:paddingTop="20dp"
                        android:textSize="15sp"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxx"
                        android:layout_gravity="center"
                        android:textColor="#088da5"
                        android:paddingTop="2dp"
                        android:textSize="15sp"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokalita"
                        android:layout_gravity="center"
                        android:textColor="#088da5"
                        android:paddingTop="20dp"
                        android:textSize="15sp"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxx"
                        android:layout_gravity="center"
                        android:textColor="#088da5"
                        android:paddingTop="2dp"
                        android:textSize="15sp"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Typ:"
                        android:layout_gravity="center"
                        android:textColor="#088da5"
                        android:paddingTop="20dp"
                        android:textSize="15sp"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxx"
                        android:layout_gravity="center"
                        android:textColor="#088da5"
                        android:paddingTop="2dp"
                        android:textSize="15sp"
                    />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prodejce:"
                            android:layout_gravity="center"
                            android:textColor="#088da5"
                            android:paddingTop="20dp"
                            android:textSize="15sp"
                        />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxxxx"
                            android:layout_gravity="center"
                            android:textColor="#088da5"
                            android:paddingTop="2dp"
                            android:textSize="15sp"
                        />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Typ nabídky:"
                        android:layout_gravity="center"
                        android:textColor="#088da5"
                        android:paddingTop="20dp"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxx"
                        android:layout_gravity="center"
                        android:textColor="#088da5"
                        android:paddingTop="2dp"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>